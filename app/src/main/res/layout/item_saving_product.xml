<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_saving_product_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:stretchColumns="0"
    android:background="@android:color/white">

    <TableRow>

        <TextView
            android:id="@+id/item_saving_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DE524F"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_saving_product_expected_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE524F"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_saving_product_start_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE524F"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_saving_product_product_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE524F"
            android:textSize="16sp"/>

    </TableRow>

    <TableRow>

        <RelativeLayout>

            <TextView
                android:id="@+id/item_saving_product_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/selector_product_type"
                android:textColor="@color/product_type_text_color"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_saving_product_expected_return_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginRight="35dp"
            android:text="@string/expected_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:layout_marginRight="35dp"
            android:textSize="12sp"
            android:text="@string/start_balance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            android:text="@string/product_duration"/>

    </TableRow>

</TableLayout>