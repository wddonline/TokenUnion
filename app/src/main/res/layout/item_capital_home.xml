<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_capital_home_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DE524F"
                android:textSize="18sp"
                android:text="ANY"/>

            <ImageView
                android:id="@+id/item_capital_home_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/item_capital_home_currency"
                android:src="@mipmap/ic_hot_red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/item_capital_home_spot0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/capital_spot_text_color"
                android:textSize="12sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/super_node"
                android:clickable="true"
                android:background="@drawable/selector_capital_card_spot"/>

            <TextView
                android:id="@+id/item_capital_home_spot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/capital_spot_text_color"
                android:textSize="12sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/super_node"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_capital_card_spot"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_capital_home_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#2E3039"
                android:text="0.0254"/>

            <TextView
                android:id="@+id/item_capital_home_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#848484"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="89.5487 USD"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_capital_home_click"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#DE524F"
            android:background="@drawable/bg_capital_detail_btn"
            android:layout_marginLeft="15dp"
            android:text="@string/detail"/>

    </LinearLayout>


</LinearLayout>