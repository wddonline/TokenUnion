<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.capital.view.activity.NewUserHoldingActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:background="@mipmap/bg_interest_rule_top_gift">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_new_user_holding_quota_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activityLeftMargin"
                android:text="@string/capital_complex"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/activityLeftMargin"
                >
                <TextView
                    android:id="@+id/activity_new_user_holding_quota_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAAC89"
                    android:textSize="24sp"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAAC89"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:text="%  Bonus+"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:layout_marginRight="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_new_user_holding_tag_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/profit_new_user_tags1"
                android:textSize="12sp"
                android:textColor="#CAAC89"
                android:background="@drawable/bg_welcom_package_rect_golden"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/activity_new_user_holding_tag_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text="@string/profit_new_user_tags2"
                android:textColor="#CAAC89"
                android:textSize="12sp"
                android:background="@drawable/bg_welcom_package_rect_golden"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_no_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/img_no_data"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/activity_new_user_holding_data_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="16dp">

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#CAAC89"/>

        <TextView
            android:id="@+id/item_novice_orderlist_layout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profit_new_user_holdings"
            android:textColor="#2E3039"
            android:layout_marginLeft="8dp"
            android:textSize="14sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="@dimen/activityLeftMargin"
        android:layout_marginRight="@dimen/activityRightMargin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activityLeftMargin"
        android:layout_marginRight="@dimen/activityRightMargin"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">

        <TextView
            android:id="@+id/item_novice_orderlist_layout_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/time"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/item_novice_orderlist_layout_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/item_novice_orderlist_layout_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/period"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/item_novice_orderlist_layout_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Expected Profit"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB"
        android:layout_marginLeft="@dimen/activityLeftMargin"
        android:layout_marginRight="@dimen/activityRightMargin"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_new_user_holding_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_new_user_holding_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/go_lock_capital"
        android:background="@drawable/selector_rect_btn"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:onClick="onLockCapitalClicked"/>
</LinearLayout>
