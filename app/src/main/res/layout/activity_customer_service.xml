<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.mine.view.activity.CustomerServiceActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="@string/customer_service_email_title"
        />

    <TextView
        android:id="@+id/activity_customer_service_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:text="@string/customer_service_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textIsSelectable="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/text_blue_link"
        android:focusable="true"
        android:text="@string/customer_service_email_copy"
        android:onClick="onCopyServiceEmailClick"
        android:background="@drawable/text_underline"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="@string/customer_service_tips"/>

</LinearLayout>