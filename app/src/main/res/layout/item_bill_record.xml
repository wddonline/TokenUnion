<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingRight="29dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_bill_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DE524F"
            android:textSize="12sp"
            android:text="111111"/>

        <TextView
            android:id="@+id/item_bill_record_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bill_record_text_color"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="111111"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/item_bill_record_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A4A4A4"
            android:textSize="12sp"
            android:text="111111"/>

        <TextView
            android:id="@+id/item_bill_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A4A4A4"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="111111"/>

    </RelativeLayout>

</LinearLayout>