<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".ui.wallet.view.activity.WalletExchangeActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <com.tokenunion.pro.widget.LoadView
        android:id="@+id/data_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_wallet_exchange_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlEnableLoadMore="false"
        app:srlEnableRefresh="false"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"

            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/activity_wallet_exchange_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="14sp"
                    android:text="TUC"
                    android:hint="@string/select_currency"
                    android:textColorHint="#848484"
                    android:textColor="#848484"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="44dp"
                    android:onClick="onCardClicked"
                    android:clickable="true"
                    android:background="@drawable/common_item_bg"
                    android:drawableRight="@mipmap/ic_arrow_down_red"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"/>

                <com.yidaichu.android.common.view.flow.TagFlowLayout
                    android:id="@+id/activity_wallet_exchange_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:itemSpacing="5dp"
                    app:lineSpacing="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_wallet_exchange_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="14sp"
                    android:background="@android:color/white"
                    android:hint="@string/amount"
                    android:textColorHint="#848484"
                    android:textColor="#848484"
                    android:lines="1"
                    android:inputType="number"
                    android:digits="@string/config_number_text_verify"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:nextFocusDown="@id/activity_wallet_exchange_pwd"
                    android:layout_marginTop="44dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
		    android:background="@android:color/white"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/activity_wallet_exchange_amount_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DE524F"
                        android:textSize="12sp"
                        android:drawablePadding="5dp"
                        android:text="@string/error_amount_empty"
                        android:drawableLeft="@mipmap/ic_alert"
                        android:visibility="gone"
                        />

                </LinearLayout>

		<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>
		    
                <!--android:drawableRight="@mipmap/arrow_down"-->
                <TextView
                    android:id="@+id/activity_wallet_exchange_dst_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="14sp"
                    android:text="ETH"
                    android:hint="@string/exchange_dst"
                    android:textColorHint="#848484"
                    android:textColor="#848484"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="44dp"
                    android:onClick="onCardClicked"
                    android:clickable="true"
                    android:background="@drawable/common_item_bg"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"/>

                <com.yidaichu.android.common.view.flow.TagFlowLayout
                    android:id="@+id/activity_wallet_exchange_dst_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:itemSpacing="5dp"
                    app:lineSpacing="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginTop="13dp"/>

                <EditText
                    android:id="@+id/activity_wallet_exchange_dst_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:background="@android:color/white"
                    android:hint="@string/predicted_convertible_amount"
                    android:textColorHint="#848484"
                    android:textColor="#848484"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:visibility="gone"
                    />
		<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
		    android:background="@android:color/white"
                    android:layout_marginTop="44dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp">

                    <EditText
                        android:id="@+id/activity_wallet_exchange_pwd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/capital_pwd_hint"
                        android:inputType="textPassword"
                        android:textColorHint="#848484"
                        android:textColor="#848484"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="6dp"
                        android:src="@drawable/selector_password_hide"
                        android:onClick="onHidePwdClicked"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEDED"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
		    android:background="@android:color/white"
                    android:paddingRight="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="44dp">

                    <TextView
                        android:id="@+id/activity_wallet_exchange_pwd_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_alert"
                        android:textColor="#DE524F"
                        android:drawablePadding="5dp"
                        android:visibility="gone"
                        android:text="@string/deposit_forget_pwd"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_wallet_exchange_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:padding="18dp"
                    android:visibility="visible"
                    android:layout_marginBottom="44dp"
                    android:background="@drawable/bg_wallet_round_rect"
                    />

            </LinearLayout>

        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/exchange_btn"
        android:background="@drawable/selector_rect_btn"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:onClick="onExchangeClicked"/>

</LinearLayout>