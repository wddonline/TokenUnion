<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.capital.view.activity.SavingsProductsActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <com.tokenunion.pro.widget.PagerSlidingTabStrip
        android:id="@+id/activity_savings_products_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EDEDED"
        app:pstsIndicatorColor="#DE524F" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_savings_products_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
