<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/layout_main_tab_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tab_capital_default"/>

    <TextView
        android:id="@+id/layout_main_tab_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_dot"
        android:layout_toRightOf="@id/layout_main_tab_img"
        android:textSize="8sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/layout_main_tab_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/layout_main_tab_img"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tab_text_color"
        android:textSize="9sp"
        android:includeFontPadding="true"/>

</RelativeLayout>