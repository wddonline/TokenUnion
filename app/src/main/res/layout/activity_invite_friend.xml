<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".ui.invite.view.activity.InviteFriendActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="64dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/invite_anypocke"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#101010"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/activity_invite_friend_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A4A4A4"
                    android:textSize="12sp"
                    android:text="V1.0"/>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/bg_qr_code_rect">

                    <com.tokenunion.pro.widget.NetworkImageView
                        android:id="@+id/activity_invite_friend_qr"
                        android:layout_width="126dp"
                        android:layout_height="126dp"
			android:layout_marginTop="38dp"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/activity_invite_friend_invite_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/my_invite_format"
                        android:textSize="14sp"
                        android:textColor="#101010"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:clickable="true"
            android:onClick="onCopyCodeClicked"
            android:background="@drawable/selector_rect_btn"
            android:text="@string/copy_invite_code"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#DE524F"
                android:textSize="14sp"
                android:clickable="true"
                android:onClick="onCopyLinkClicked"
                android:background="@drawable/selector_white_rect_btn"
                android:text="@string/copy_invite_link"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DE524F"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>