<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnablePureScrollMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membership_condition_title"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/fragment_membership_desc_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:textSize="12sp"
                android:textColor="#2E3039"
                android:layout_marginBottom="28dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membership_stable_level_title"
                android:textColor="#BBBBBB"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/fragment_membership_desc_stable_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:textSize="12sp"
                android:textColor="#2E3039"
                android:layout_marginBottom="28dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membership_right_title"
                android:textColor="#BBBBBB"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/fragment_membership_desc_right0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/fragment_membership_desc_right_icon0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_name0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_desc0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#BBBBBB"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_membership_desc_right1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/fragment_membership_desc_right_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#BBBBBB"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_membership_desc_right2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/fragment_membership_desc_right_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#BBBBBB"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/fragment_membership_desc_right3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/fragment_membership_desc_right_icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#BBBBBB"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_membership_desc_right4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/fragment_membership_desc_right_icon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/fragment_membership_desc_right_desc4"
