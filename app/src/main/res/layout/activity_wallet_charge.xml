<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.wallet.view.activity.WalletChargeActivity">

    <include layout="@layout/layout_common_actionbar"/>

    <com.tokenunion.pro.widget.LoadView
        android:id="@+id/data_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/activity_wallet_charge_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp"
                android:textColor="#848484"
                android:textColorHint="#848484"
                android:hint="@string/select_currency"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginTop="44dp"
                android:onClick="onCardClicked"
                android:clickable="true"
                android:background="@drawable/common_item_bg"
                android:drawableRight="@mipmap/ic_arrow_down_red"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>

            <com.yidaichu.android.common.view.flow.TagFlowLayout
                android:id="@+id/activity_wallet_charge_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemSpacing="5dp"
                app:lineSpacing="5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"/>

            <com.tokenunion.pro.widget.NetworkImageView
                android:id="@+id/activity_wallet_charge_qr"
                android:layout_width="151dp"
                android:layout_height="151dp"
                android:layout_marginTop="40dp"/>

            <!--不带memo的普通币种收款地址展示-->
            <LinearLayout
                android:id="@+id/activity_wallet_charge_addr_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/activity_wallet_charge_qr_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#2E3039"
                    android:textSize="14sp"
                    android:layout_marginTop="23dp"
                    android:text="tucdeposit"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"/>

                <TextView
                    android:id="@+id/activity_wallet_charge_qr_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3688F4"
                    android:textSize="14sp"
                    android:text="@string/copy_uri"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:autoLink="all"
                    android:onClick="onCopyCodeClicked"/>
            </LinearLayout>
            <!--带memo的币种，比如EOS的收款地址展示-->
            <include layout="@layout/layout_wallet_charge_memo"
                android:id="@+id/activity_wallet_charge_memo_container"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/activityLeftMargin"
                android:layout_marginRight="@dimen/activityRightMargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/back_wallet"
        android:background="@drawable/selector_rect_btn"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:onClick="onBackWalletClicked"/>

</LinearLayout>