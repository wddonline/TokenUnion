<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.login.view.LoginActivity">

    <RadioGroup
        android:id="@+id/user_level_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <RadioButton
            android:id="@+id/user_level_change_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小星星"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/user_level_change_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉星级"/>

        <RadioButton
            android:id="@+id/user_level_change_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金星级"/>

        <RadioButton
            android:id="@+id/user_level_change_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钛金级"/>

        <RadioButton
            android:id="@+id/user_level_change_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铂金级"/>

        <RadioButton
            android:id="@+id/user_level_change_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钻石级"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lan_cn"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:drawablePadding="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:onClick="onLanguageChoiceClicked"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/app_logo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:hint="@string/username"
                android:textColorHint="#BBBBBB"
                android:textColor="#2E3039"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="42dp">

                <EditText
                    android:id="@+id/activity_login_pwd"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:hint="@string/password"
                    android:textColorHint="#BBBBBB"
                    android:textColor="#2E3039"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_password_hide"
                    android:onClick="onHidePwdClicked"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#DE524F"
                android:text="@string/forget_pwd"
                android:clickable="true"
                android:onClick="onForgetPwdClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#DE524F"
                android:drawableLeft="@mipmap/ic_alert"
                android:drawablePadding="5dp"
                android:text="@string/username_or_password_error"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_register"
                android:textSize="14sp"
                android:textColor="#DE524F"
                android:clickable="true"
                android:onClick="onRegisterClicked"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/login"
            android:background="@drawable/selector_rect_btn"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:onClick="onLoginClicked"/>

    </LinearLayout>

</FrameLayout>