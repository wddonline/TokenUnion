<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <padding android:left="15dp" android:right="15dp" android:top="3dp" android:bottom="3dp"/>
            <corners android:bottomLeftRadius="5dp" android:topRightRadius="5dp"/>
            <solid android:color="#DE524F"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <padding android:left="15dp" android:right="15dp" android:top="3dp" android:bottom="3dp"/>
            <corners android:bottomLeftRadius="5dp" android:topRightRadius="5dp"/>
            <stroke android:width="1dp" android:color="#888888"/>
        </shape>
    </item>
</selector>